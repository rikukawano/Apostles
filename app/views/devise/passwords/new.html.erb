<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

	<div class="signin-form">
		<h2>Forgot your password?</h2>
	  <div class="field">
	    <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "email" %>
	  </div>

	    <%= f.submit "Send me my password", class: "button"%>

		<%= link_to "Back to Login", user_session_path, class: "back_login" %>
	</div>
<% end %>